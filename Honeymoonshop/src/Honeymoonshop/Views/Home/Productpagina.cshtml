@model Honeymoonshop.Models.Product
@{
    Product product = ViewData["Product"] as Product;
}
<div class="productcontainer row">
    <div id="productpagina" class="row">
        <div id="breadcrumb col-md-12"><a href="#"><img src="~/images/arrow.png" />Terug naar overzicht</a></div>
        <div class="col-md-3">
            <img src="http://placekitten.com/g/250/250" class="pull-right" />
            <img src="http://placekitten.com/g/250/250" class="pull-right" />
            <img src="http://placekitten.com/g/250/250" class="pull-right" />
        </div>
        <div class="col-md-6">
            <img src="http://placekitten.com/g/700/800" class="pull-right" />
        </div>
        <div class="col-md-3">
            <h4>@product.merk.merkNaam</h4>
            <p>artikel nr. @product.artikelnummer</p>
            <p>@product.omschrijving</p>
            <div>
                <p>
                    <span>Merk: <a href="#">@product.merk.merkNaam</a></span><br />
                </p>
                <p>
                    <span>Kenmerken: 
                        @{
                            foreach (Kenmerkproduct kenmerkproduct in product.kenmerken)
                            {
                                <a href="#">@kenmerkproduct.kenmerk.naam</a>
                            }
                        }
                    </span><br />
                </p>
                <p>
                    <span>Prijsindicatie: €@product.prijs</span><br />
                </p>
                <p>
                    <span>Beschikbare kleuren: @{
                        foreach (Kleurproduct kleurproduct in product.kleuren)
                        {
                            <span>@kleurproduct.kleur.naam</span>
                        }
                    }</span><br />
                </p>
                <p>Kom deze jurk passen!</p>
            </div>
            <a href="#" class="text-uppercase">Pasafspraak maken</a>
        </div>
    </div>
    <div class="row" id="tussenkopje">
        <hr class="col-md-2" />
        <h4 class="col-md-3 text-uppercase text-center">Bijpassende Sieraden</h4>
        <hr class="col-md-2" />
    </div>
    <div class="row" id="bijpassend">
        <div class="col-md-12">
            <div class="col-md-3">
                <div class="text-center"><img src="http://placekitten.com/g/300/350" /></div>
                <span>Accessoire</span>
            </div>
            <div class="col-md-3">
                <div class="text-center"><img src="http://placekitten.com/g/300/350" /></div>
                <span>Accessoire</span>
            </div>
            <div class="col-md-3">
                <div class="text-center"><img src="http://placekitten.com/g/300/350" /></div>
                <span>Accessoire</span>
            </div>
            <div class="col-md-3">
                <div class="text-center"><img src="http://placekitten.com/g/300/350" /></div>
                <span>Accessoire</span>
            </div>
        </div>
        <a href="#">
            <div class="col-md-12">
                <span class="text-uppercase">Bezoek de webshop</span>
            </div>
        </a>
    </div>
    <div class="row" id="tussenkopje">
        <hr class="col-md-3" />
        <h4 class="col-md-4 text-uppercase text-center">Of zijn deze @product.categorie.naam meer iets voor jou?</h4>
        <hr class="col-md-3" />
    </div>
    <div class="row" id="alternatieven">
        <div class="col-md-12">
            <div class="col-md-3">
                <div class="text-center"><img src="http://placekitten.com/g/300/400" /></div>
