@model List<Product>
<h2>Product overzicht</h2>

<a asp-action="create" asp-controller="product">+ product toevoegen</a>
<table class="table-striped col-md-12">
    <tr>
        <th class="col-md-4">#</th>
        <th class="col-md-4">Merk</th>
        <th class="col-md-4"></th>
    </tr>
    @if (Model.Count > 0)
    {
        <tr>
            @foreach (var product in Model)
            {
                <td>@product.artikelnummer</td>
                <td>@product.merk</td>
                <td>
                    <a asp-action="productWijzigen" asp-controller="admin">wijzig</a>
                    <a asp-action="verwijderProduct" asp-controller="admin">delete</a>
                </td>


            }
        </tr>
    }

</table>