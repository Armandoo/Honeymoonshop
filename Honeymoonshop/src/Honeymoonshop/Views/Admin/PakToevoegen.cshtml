@{
        ViewData["Title"] = "Pak toevoegen";
    }

    <form class="form-horizontal productform">
        <div class="form-group bold">Pak toevoegen</div>
        <div class="form-group artikelnummer">
            <label class="col-sm-2 control-label">Artikelnummer</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="artikelnummer" placeholder="Artikelnummer">
            </div>
        </div>
        <div class="form-group merk">
            <label class="col-sm-2 control-label">Merk</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="merk" placeholder="Merk">
            </div>
        </div>
        <div class="form-group model">
            <label class="col-sm-2 control-label">Model</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="model" placeholder="Model">
            </div>
        </div>
        <div class="form-group kleur">
            <label for="inputKleur3" class="col-sm-2 control-label">Kleur</label>
            <div class="col-md-4">
                <select>
                    <option value="Licht">Licht</option>
                    <option value="Donker">Donker</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-default">Opslaan</button>
            </div>
        </div>
    </form>