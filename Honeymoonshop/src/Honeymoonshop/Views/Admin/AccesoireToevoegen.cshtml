@{
    ViewData["Title"] = "Accesoires toevoegen";
}

<form class="form-horizontal productform">
    <div class="form-group bold">Accesoire toevoegen</div>
    <div class="form-group soort">
        <label for="inputArtikel3" class="col-sm-2 control-label">Soort</label>
        <div class="col-md-4">
            <select>
                <option value="Schoenen">Schoenen</option>
                <option value="Lingerie">Lingerie</option>
                <option value="Tasjes">Tasjes</option>
                <option value="Sluiers">Sluiers</option>
                <option value="Sieraden">Sieraden</option>
                <option value="Haar accessoires">Haar accesoires</option>
                <option value="Handschoenen">Handschoenen</option>
                <option value="Overige">Overige</option>
            </select>
        </div>
    </div>
    <div class="form-group artikelnummer">
        <label for="inputArtikel3" class="col-sm-2 control-label">Artikelnummer</label>
        <div class="col-md-4">
            <input type="text" class="form-control" id="artikelnummer" placeholder="Artikelnummer">
        </div>
    </div>
    <div class="form-group merk">
        <label for="inputMerk3" class="col-sm-2 control-label">Merk</label>
        <div class="col-md-4">
            <input type="text" class="form-control" id="merk" placeholder="Merk">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-default">Opslaan</button>
        </div>
    </div>
</form>