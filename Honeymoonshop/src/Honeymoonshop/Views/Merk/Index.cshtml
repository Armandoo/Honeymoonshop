@model IEnumerable<Honeymoonshop.Models.Merk>
<h2>Merken</h2>
<p>
    <a asp-action="Index" asp-controller="Admin">Naar dashboard</a><br />
    <a asp-action="Create">Nieuw merk toevoegen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Merknaam
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.merkNaam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Wijzig</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Verwijder</a>
            </td>
        </tr>
}
    </tbody>
</table>